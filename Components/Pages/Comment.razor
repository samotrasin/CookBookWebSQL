@page "/comments"

<h3>Leave a Feedback</h3>


    
<form class="row g-3">
  <div class="col-md-6">
        <label for="inputName" class="form-label">Name</label>
        <input type="text" class="form-control" id="inputName" placeholder="Enter your name" required>
    </div>
    <div class="col-md-6">
        <label for="inputEmail" class="form-label">Email</label>
        <input type="email" class="form-control" id="inputEmail" placeholder="Enter your email (optional)">
    </div>
    <div class="col-12">
        <label for="inputRecipe" class="form-label">Select Recipe</label>
        <select id="inputRecipe" class="form-select">
            <option selected disabled>Choose a recipe...</option>
            <!-- Example of static recipes for UI preview -->
            <option>Spaghetti Bolognese</option>
            <option>Chicken Curry</option>
            <option>Vegetarian Pizza</option>
        </select>
    </div>
    <div class="col-12">
        <label for="inputRating" class="form-label">Rate the Recipe</label>
        <select id="inputRating" class="form-select">
            <option selected disabled>Choose a rating...</option>
            <option value="1">1 - Very Poor</option>
            <option value="2">2 - Poor</option>
            <option value="3">3 - Average</option>
            <option value="4">4 - Good</option>
            <option value="5">5 - Excellent</option>
        </select>
    </div>
    <div class="col-12">
        <label for="inputComment" class="form-label">Comment (Optional)</label>
        <textarea class="form-control" id="inputComment" rows="4" placeholder="Write your feedback here..."></textarea>
    </div>
    <div class="col-12">
        <button type="submit" class="btn btn-primary">Submit Feedback</button>
    </div>
</form>

<h3>Feedbacks</h3>
<div class="comment-section">
    <ul class="list-group">
        <!-- Example of static feedbacks for UI preview -->
        <li class="list-group-item">
            <strong>Recipe: Spaghetti Bolognese</strong> (<small>2024-12-09</small>)
            <p><strong>Rating:</strong> ⭐⭐⭐⭐</p>
            <p>This was a great recipe! Easy to follow and delicious.</p>
        </li>
        <li class="list-group-item">
            <strong>Recipe: Chicken Curry</strong> (<small>2024-12-08</small>)
            <p><strong>Rating:</strong> ⭐⭐⭐⭐</p>
            <p>Nice recipe but I made it spicier to suit my taste.</p>
        </li>
    </ul>
</div>
